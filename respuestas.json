<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Respuestas de Entrevista</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f5f5;
      padding: 40px;
    }

    .contenedor {
      max-width: 800px;
      margin: auto;
      background: white;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    h1 {
      text-align: center;
      color: #005b8f;
    }

    select {
      width: 100%;
      padding: 8px;
      font-size: 16px;
      margin-bottom: 20px;
    }

    .respuesta {
      border-bottom: 1px solid #ddd;
      padding: 10px 0;
    }

    .respuesta p {
      margin: 5px 0;
    }

    .pregunta {
      font-weight: bold;
      color: #333;
    }

    .valor {
      color: #444;
    }
  </style>
</head>
<body>

  <div class="contenedor">
    <h1>Respuestas del Colaborador</h1>
    <select id="select-colaborador">
      <option value="">-- Seleccione un colaborador --</option>
    </select>

    <div id="respuestas"></div>
  </div>

  <script>
    let datos = [];

    fetch("respuestas.json")
      .then(response => response.json())
      .then(json => {
        datos = json;
        const nombres = [...new Set(datos.map(item => item.nombre_colaborador))];
        const select = document.getElementById("select-colaborador");

        nombres.forEach(nombre => {
          const option = document.createElement("option");
          option.value = nombre;
          option.textContent = nombre;
          select.appendChild(option);
        });
      });

    document.getElementById("select-colaborador").addEventListener("change", function() {
      const nombre = this.value;
      const contenedor = document.getElementById("respuestas");
      contenedor.innerHTML = "";

      const respuestas = datos.filter(d => d.nombre_colaborador === nombre);
      if (respuestas.length === 0) {
        contenedor.innerHTML = "<p>No se encontraron respuestas.</p>";
        return;
      }

      respuestas.forEach((r, i) => {
        const div = document.createElement("div");
        div.className = "respuesta";
        div.innerHTML = `
          <p class="pregunta">Pregunta: ${r.pregunta || '—'}</p>
          <p class="valor">Respuesta: ${r.respuesta || '—'}</p>
        `;
        contenedor.appendChild(div);
      });
    });
  </script>

</body>
</html>
